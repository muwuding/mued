extends common/layout

//- 样式文件
append css
  link(type="text/css" rel='stylesheet', href='/css/opus.min.css')

//- 主体内容
block content
  .mu-container.clearfix
    each item in opus
      a.list-item(href="#{item.link}", target="_blank")
          .item-img
            img(src="#{item.img}")
          .item-title #{item.title}

//- 脚本文件
append script
  script(type="text/javascript" src='/js/opus.min.js')
